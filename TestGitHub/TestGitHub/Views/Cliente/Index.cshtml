<body class="d-flex justify-content-center align-items-center vh-100" style="background-image: url(../assets/fondo.png); background-position: center;">
    <div class=" p-2 text-dark bg-opacity-10" id="principal">
        <div class=" d-flex justify-content-center">
            <img src="../assets/carrito.png" alt="carrito-icon" style="height:8rem">
        </div>
        <div>
            <h3 class="text-center fs-1 fw-bold">FAST</h3>
        </div>
        <form class="form-signin" action="/Cliente/ValidarCliente" method="post">
            <input type="text" asp-for="EmailCliente" class="form-control justify-content-center align-items-center" placeholder="Ingrese su correo electronico"
                   id="username" />
            <span asp-validation-for="EmailCliente" class="text-danger"></span>
            <br/>
            <input type="password" asp-for="ContraCliente" class="form-control justify-content-center align-items-center" placeholder="Ingrese su contraseña"
                   id="password" />
            <span asp-validation-for="ContraCliente" class="text-danger"></span>
            <button class="btn btn-lg btn-primary btn-block fw-semibold fst-italic" type="submit">
                <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span> Sign in
            </button>
        </form>
