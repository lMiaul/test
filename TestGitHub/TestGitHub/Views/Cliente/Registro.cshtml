@{
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Registro</title>
        <link rel="stylesheet" href="../css/estilosRegistro.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@100&display=swap" rel="stylesheet">

    </head>
    <body>
        <section class="form-register text-center">
            <h4 style="font-family: 'Inter Tight'; font-weight:900">Formulario Registro</h4>
                <form asp-controller="Cliente" asp-action="RegistrarCliente" method="post">
                    <div class="form-group">
                        <label for="formGroupExampleInput">Nombres</label>
                        <input asp-for="NombreCliente" class="form-control" id="formGroupExampleInput" placeholder="Ingrese sus nombres">
                        <span asp-validation-for="NombreCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Apellidos</label>
                        <input asp-for="ApellidosCliente" class="form-control" id="formGroupExampleInput" placeholder="Ingrese sus apellidos">
                        <span asp-validation-for="ApellidosCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Edad</label>
                        <input asp-for="EdadCliente" class="form-control" id="formGroupExampleInput" placeholder="Ingrese su edad">
                        <span asp-validation-for="EdadCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Teléfono</label>
                        <input asp-for="TelefonoCliente" class="form-control" id="formGroupExampleInput" placeholder="Ingrese su teléfono">
                        <span asp-validation-for="TelefonoCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Dirección</label>
                        <input asp-for="DireccionCliente" class="form-control" id="formGroupExampleInput" placeholder="Ingrese su dirección">
                        <span asp-validation-for="DireccionCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Correo</label>
                        <input asp-for="EmailCliente" class="form-control" id="formGroupExampleInput" placeholder="Ingrese su correo">
                        <span asp-validation-for="EmailCliente" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="formGroupExampleInput">Contraseña</label>
                        <input type="password" asp-for="ContraCliente" class="form-control" id="formGroupExampleInput" placeholder="Ingrese su contraseña">
                        <span asp-validation-for="ContraCliente" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary" value="btn" name="grabar" data-toggle="modal" data-target="#exampleModal">Grabar</button>
                    </div>

                </form>
            <p><a asp-action="Index" class="fw-semibold fst-italic" style="color:black">¿Ya tiene una cuenta?</a></p>
        </section>
    </body>
</html>

@section Scripts{
    @{ <partial name= "_ValidationSCriptsPartial"/>}
}