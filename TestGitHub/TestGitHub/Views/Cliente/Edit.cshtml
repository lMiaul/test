@{
}

<html>
    <body>
        <form asp-controller="Cliente" asp-action="EditarClientes" method="post">
            <div class="form-group">
                <label for="formGroupExampleInput">Id (NO TOCAR)</label>
                <input asp-for="IdCliente" class="form-control" id="formGroupExampleInput" placeholder="Id">
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Nombres</label>
                <input asp-for="NombreCliente" class="form-control" id="formGroupExampleInput" placeholder="Nombres cliente">
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Apellido</label>
                <input asp-for="ApellidosCliente" class="form-control" id="formGroupExampleInput" placeholder="Apellidos cliente">
                <span asp-validation-for="ApellidosCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Edad</label>
                <input asp-for="EdadCliente" class="form-control" id="formGroupExampleInput" placeholder="Edad cliente">
                <span asp-validation-for="EdadCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Telefono</label>
                <input asp-for="TelefonoCliente" class="form-control" id="formGroupExampleInput" placeholder="Telefono cliente">
                <span asp-validation-for="TelefonoCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Direccion</label>
                <input asp-for="DireccionCliente" class="form-control" id="formGroupExampleInput" placeholder="Direccion cliente">
                <span asp-validation-for="DireccionCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput">Email</label>
                <input asp-for="EmailCliente" class="form-control" id="formGroupExampleInput" placeholder="Email cliente">
                <span asp-validation-for="EmailCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary" value="btn" name="grabar" data-toggle="modal" data-target="#exampleModal">Grabar</button>
            </div>
        </form>
    </body>
</html>

