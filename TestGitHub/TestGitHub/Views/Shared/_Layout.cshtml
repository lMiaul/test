@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@using TestGitHub.Utilidades


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestGitHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestGitHub.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Producto" asp-action="Menu">Fast</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if ((HttpContextAccessor.HttpContext.Session.Get<Cliente>("scliente")) != null){
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="CerrarSesion">Cerrar Sesion</a>
                            </li>
                   
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Categorías
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Abarrotes">Abarrotes</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Bebidas">Bebidas</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Mascotas">Mascotas</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Medicamentos">Medicamentos</a></li>
                                    <li><a class="nav-link text-dark" asp-area="" asp-controller="Producto" asp-action="Higiene">Higiene</a></li>
                                </ul>
                            </li>
                        }
                        
                        <li>
                            @if(HttpContextAccessor.HttpContext.Session.Get<List<Producto>>(WC.SessionCarroCompras) != null)
                                {
                                <a asp-action="GetListaProductos" asp-controller="Producto" class="nav-link">
                                    @{
                                        var count = HttpContextAccessor.HttpContext.Session.Get<List<Producto>>(WC.SessionCarroCompras).Count();
                                    }
                                        <i class="fas fa-shopping-cart"></i> &nbsp; (@count)
                                    </a>
                                    
                            }
                            else
                            {
                                <a href="#" class="nav-link">
                                    <i class="fas fa-shopping-cart"></i> &nbsp; (0)
                                </a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
