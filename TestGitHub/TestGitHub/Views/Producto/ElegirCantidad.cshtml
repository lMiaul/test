@{
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Elección de cantidad</title>
        <link rel="stylesheet" href="../css/estilosRegistro.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@100&display=swap" rel="stylesheet">

    </head>
    <body>
        <section class="form-register text-center">
            <h4 style="font-family: 'Inter Tight'; font-weight:900">Validación</h4>
            <form asp-controller="Producto" asp-action="GetListaProductos" method="post">
                <div class="form-group">
                    <label for="formGroupExampleInput" hidden="hidden">Codigo</label>
                    <input asp-for="CodigoProducto" hidden="hidden" class="form-control" id="formGroupExampleInput">
                    <span asp-validation-for="CodigoProducto" class="text-danger" hidden="hidden"></span>
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Nombre</label><br />
                    <label for="formGroupExampleInput">@Model.NombreProducto</label>
                    <input asp-for="NombreProducto" hidden="hidden" class="form-control" id="formGroupExampleInput">
                    <span asp-validation-for="NombreProducto" hidden="hidden" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Descripcion</label><br />
                    <label for="formGroupExampleInput">@Model.DescripcionProducto</label>
                    <input asp-for="DescripcionProducto" hidden="hidden" class="form-control" id="formGroupExampleInput">
                    <span asp-validation-for="DescripcionProducto" hidden="hidden" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput" hidden="hidden">Categoría</label>
                    <select asp-for="CodigoCategoria" hidden="hidden" class="form-control" id="formGroupExampleInput" asp-items="@(new SelectList(ViewBag.Categoria, "CodigoCategoria", "NombreCategoria"))"></select>
                    <span asp-validation-for="CodigoCategoria" hidden="hidden" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput" hidden="hidden">Stock</label>
                    <input asp-for="StockProducto" hidden="hidden" class="form-control" id="formGroupExampleInput">
                    <span asp-validation-for="StockProducto" hidden="hidden" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Precio en soles</label><br/>
                    <label for="formGroupExampleInput">@Model.PrecioProducto</label>
                    <input asp-for="PrecioProducto" hidden="hidden" class="form-control" id="formGroupExampleInput">
                    <span asp-validation-for="PrecioProducto" hidden="hidden" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput">Cantidad a escoger</label>
                    <input type="number" asp-for="CantidadEscogida" class="form-control" id="formGroupExampleInput" placeholder="Ingrese la cantidad a escoger" min="1" max="@Model.StockProducto">
                    <span asp-validation-for="CantidadEscogida" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" value="btn" name="grabar" data-toggle="modal" data-target="#exampleModal">Confirmar</button>
                </div>

            </form>
        </section>
    </body>
</html>