@{
}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Registro</title>
        <link rel="stylesheet" href="../css/estilosRegistro.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter+Tight:wght@100&display=swap" rel="stylesheet">

    </head>
    <body>
        <section class="form-register text-center">
            <h4 style="font-family: 'Inter Tight'; font-weight:900">Formulario Registro</h4>
            <form asp-controller="Producto" asp-action="AddCliente" method="post"> 
                <input asp-for="NombreCliente" class="controls" type="text" name="nombres" id="nombres" placeholder="Ingrese su nombre">
                <span asp-validation-for="NombreCliente" class="text-danger"></span>

                <input asp-for="ApellidosCliente" class="controls" type="text" name="apellidos" id="apellidos" placeholder="Ingrese sus apellidos">
                <span asp-validation-for="ApellidosCliente" class="text-danger"></span>

                <input asp-for="EmailCliente" class="controls" type="text" name="correo" id="correo" placeholder="Ingrese su correo">
                <span asp-validation-for="EmailCliente" class="text-danger"></span>

                @* <input asp-for="#EdadCliente" class="controls" type="text" name="edad" id="edad" placeholder="Ingrese su edad">
                <span asp-validation-for="EmailCliente" class="text-danger"></span> *@

                @* <input asp-for="TelefonoCliente" class="controls" type="text" name="telefono" id="telefono" placeholder="Ingrese su telefonio">
                <span asp-validation-for="TelefonoCliente" class="text-danger"></span> *@

                @* <input asp-for="DireccionCliene" class="controls" type="text" name="direccion" id="direccion" placeholder="Ingrese su direccion">
                <span asp-validation-for="DireccionCliene" class="text-danger"></span> *@

                <input asp-for="ContraCliente" class="controls" type="password" name="correo" id="correo" placeholder="Cree una contraseña">
                <span asp-validation-for="ContraCliente" class="text-danger"></span>
                <div class="btn shadow-lg p-3 w-100" style="background-color: #f5d298">
                    INGRESAR
                </div>
            </form>
            <p><a href="#" class="fw-semibold fst-italic" style="color:black">¿Ya tiene una cuenta?</a></p>
        </section>
    </body>
</html>